#!/bin/zsh
set -e

VERSION="$1"

if [ -z "$VERSION" ]; then
  echo "Usage: <version>"
  exit 1
fi

TMP=$(mktemp)
function finish {
  rm -rf "$TMP"
}
trap finish EXIT

wget -O "$TMP" "https://storage.googleapis.com/golang/go$VERSION.linux-amd64.tar.gz"
mkdir -p "$PREFIX/go"
tar xzf "$TMP" -C "$PREFIX/go" --strip-components=1
